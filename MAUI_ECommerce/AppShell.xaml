<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI_ECommerce.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MAUI_ECommerce.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="MAUI_ECommerce">

    <TabBar>        
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate view:HomePage}"
            Route="Home" />

        <ShellContent
            Icon="search.png"
            Title="Explore"
            ContentTemplate="{DataTemplate view:ExplorePage}"
            Route="Explore" />
        <ShellContent
            Title="Cart"
            Icon="cart.png"
            ContentTemplate="{DataTemplate view:CartPage}"
            Route="Cart" />

        <ShellContent
            Title="Offer"
            Icon="offer.png"
            ContentTemplate="{DataTemplate view:OfferPage}"
            Route="Offer" />

        <ShellContent
            Title="Account"
            Icon="user.png"
            ContentTemplate="{DataTemplate view:AccountPage}"
            Route="Account" />
    </TabBar>
</Shell>
